{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "tests/**/*"
  ],
  "exclude": [
    "./dist/**/*"
  ],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
    ],
    "outDir": "./dist",
    "noImplicitAny": false
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}